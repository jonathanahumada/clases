    <script>

      function validar(){
      
      var x = parseInt(document.getElementById("usuario").value);
      
      document.getElementById("doto").innerHTML= x;

      if(isNan(x)){
      document.getElementById("doto").innerHTML= "Es correcto";
      console.log( "Es correcto")
      }
      else{
      document.getElementById("doto").innerHTML= "Es falso";
        console.log( "Es falso")
      }
      }
	</script>
